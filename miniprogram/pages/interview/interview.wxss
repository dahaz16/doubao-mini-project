/* 基础容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding: 40rpx 30rpx;
}

/* 顶部区域 */
.top-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  margin-bottom: 30rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.chat-bubble {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  max-width: 600rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

/* 中间区域 - 用户输入显示 */
.content-section {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.user-feedback {
  background: #e8f5e9;
  border-radius: 20rpx;
  padding: 30rpx;
  max-width: 600rpx;
  align-self: flex-end;
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  display: flex;
  align-items: center;
}

.cursor {
  display: inline-block;
  width: 4rpx;
  height: 40rpx;
  background: #4caf50;
  margin-left: 8rpx;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

/* 底部控制区域 */
.controls-section {
  padding-bottom: 40rpx;
}

/* 空闲状态 - 单个讲述按钮 */
.record-button-container {
  display: flex;
  justify-content: center;
}

.record-button {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.record-button:active {
  transform: scale(0.95);
}

.record-button text {
  color: white;
  font-size: 32rpx;
  font-weight: 500;
}

/* 录音状态 - 取消/计时/发送 */
.recording-controls-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 60rpx;
}

.cancel-button, .send-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  transition: all 0.3s;
}

.cancel-button {
  background: #ff5252;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 82, 82, 0.3);
}

.send-button {
  background: #4caf50;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.cancel-button:active, .send-button:active {
  transform: scale(0.9);
}

.recording-timer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.waveform-icon {
  font-size: 40rpx;
  color: #667eea;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.recording-timer text {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

/* 思考状态 */
.thinking-indicator {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}
