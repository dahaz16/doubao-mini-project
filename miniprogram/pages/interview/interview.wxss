/* ==================== 全局容器 ==================== */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
  /* 渐变背景 */
  background: linear-gradient(135deg, #FFF5F7 0%, #F3F4F6 50%, #ECF6FF 100%);
}

/* ==================== Top 区：AI 虚拟形象 ==================== */
.top-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ai-avatar {
  display: block;
  width: 360px;
  height: 180px;
  margin-top: 108px;
}

/* ==================== Middle 区：AI 字幕气泡 ==================== */
.middle-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 20px 20px 20px;
  overflow-y: auto;
}

.ai-subtitle-bubble {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  max-height: 185px; /* 5行文字: 22px × 1.5 × 5 + 40px(上下padding) = 185px */
  overflow: hidden;
}

.ai-subtitle-scroll {
  max-height: 115.5px; /* 3.5行文字: 22px × 1.5 × 3.5 = 115.5px */
  width: 100%;
}

/* 隐藏滚动条 - 微信小程序 */
.ai-subtitle-scroll::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.ai-subtitle-scroll {
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

/* 思考中状态：彩虹渐变边框动画 */
.ai-subtitle-bubble.thinking-bubble {
  position: relative;
  background: white;
  border: none;
  box-shadow: none;
}

.ai-subtitle-bubble.thinking-bubble::before {
  content: '';
  position: absolute;
  top: -3px;
  left: -3px;
  right: -3px;
  bottom: -3px;
  border-radius: 33px;
  background: linear-gradient(90deg, #FF6B6B, #FFE66D, #4ECDC4, #45B7D1, #96E6A1, #FF6B6B);
  background-size: 300% 100%;
  animation: rainbow-border 3s linear infinite;
  z-index: -1;
}

@keyframes rainbow-border {
  0% { background-position: 0% 50%; }
  100% { background-position: 300% 50%; }
}

.ai-subtitle-text {
  font-size: 22px;
  font-weight: 600;
  color: #373737;
  line-height: 1.5;
}

.ai-subtitle-text.thinking {
  color: #A6A6A6; /* PRD规定: 思考中文字颜色 */
  font-weight: 400;
}

/* ==================== Bottom 区：用户输入区 ==================== */
.bottom-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  padding-bottom: 28px;
}

/* 用户字幕气泡 */
.user-subtitle-bubble {
  width: 675rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  margin-bottom: 20px;
  box-sizing: border-box;
}

.user-subtitle-text {
  font-size: 22px;
  color: #373737;
  line-height: 1.6;
}

/* ==================== 控制按钮组 ==================== */
.control-buttons {
  display: flex;
  align-items: center;
  width: 675rpx;
  gap: 15rpx; /* 固定物理间距 */
  box-sizing: border-box;
}

/* 讲述按钮（长条形）*/
.narration-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  height: 50px;
  border-radius: 25px;
  background: #FFFFFF;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  font-size: 20px;
  font-weight: 600;
  color: #373737;
  /* 清除button默认样式 */
  border: none;
  padding: 0 20px;
  margin: 0;
  box-sizing: border-box;
  line-height: normal;
}

.narration-btn .mic-icon {
  width: 20px;
  height: 20px;
}

.narration-btn.disabled {
  opacity: 0.5;
  color: #A6A6A6;
}

/* 圆形按钮 */
.circle-btn {
  width: 50px;
  height: 50px;
  min-width: 50px;
  max-width: 50px;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  /* 清除button默认样式 */
  padding: 0;
  margin: 0;
  border: none;
  flex-shrink: 0;
  box-sizing: border-box;
  line-height: normal;
  overflow: hidden;
}

.circle-btn image {
  width: 50px;
  height: 50px;
}

.circle-btn.disabled {
  opacity: 0.5;
}

/* 取消按钮（红色背景）*/
.circle-btn.cancel-btn {
  background: #FFFFFF;
}

.cancel-icon {
  font-size: 24px;
  font-weight: 300;
  color: #FF6B6B;
}

/* 发送按钮（白色背景，绿色箭头）*/
.circle-btn.send-btn {
  background: #FFFFFF;
}

.send-icon {
  font-size: 22px;
  font-weight: 600;
  color: #4ECDC4;
}

/* ==================== 音频指示器 ==================== */
.voice-indicator {
  width: 302rpx;
  min-width: 302rpx;
  max-width: 302rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  height: 50px;
  border-radius: 25px;
  background: #373737;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  padding: 0 20px;
  flex-shrink: 0;
  box-sizing: border-box; /* 关键：确保padding包含在宽度内 */
}

.voice-waveform {
  display: flex;
  align-items: center;
  gap: 5px;
}

.wave-bar {
  width: 4px;
  border-radius: 2px;
  background: #FFFFFF;
}

/* 每条竖杠使用不同的随机动画 */
.wave-bar:nth-child(1) { 
  height: 8px; 
  animation: wave-random-1 0.8s ease-in-out infinite;
}
.wave-bar:nth-child(2) { 
  height: 12px; 
  animation: wave-random-2 0.7s ease-in-out infinite;
}
.wave-bar:nth-child(3) { 
  height: 16px; 
  animation: wave-random-3 0.9s ease-in-out infinite;
}
.wave-bar:nth-child(4) { 
  height: 14px; 
  animation: wave-random-4 0.75s ease-in-out infinite;
}
.wave-bar:nth-child(5) { 
  height: 16px; 
  animation: wave-random-5 0.85s ease-in-out infinite;
}
.wave-bar:nth-child(6) { 
  height: 12px; 
  animation: wave-random-6 0.8s ease-in-out infinite;
}

/* 随机动画 - 模拟讲话中的混乱高度变化 */
@keyframes wave-random-1 {
  0%, 100% { transform: scaleY(1); }
  25% { transform: scaleY(1.5); }
  50% { transform: scaleY(0.8); }
  75% { transform: scaleY(1.8); }
}

@keyframes wave-random-2 {
  0%, 100% { transform: scaleY(1); }
  30% { transform: scaleY(1.8); }
  60% { transform: scaleY(1.2); }
  80% { transform: scaleY(0.9); }
}

@keyframes wave-random-3 {
  0%, 100% { transform: scaleY(1); }
  20% { transform: scaleY(0.9); }
  45% { transform: scaleY(1.6); }
  70% { transform: scaleY(1.3); }
}

@keyframes wave-random-4 {
  0%, 100% { transform: scaleY(1); }
  35% { transform: scaleY(1.4); }
  55% { transform: scaleY(0.85); }
  85% { transform: scaleY(1.7); }
}

@keyframes wave-random-5 {
  0%, 100% { transform: scaleY(1); }
  15% { transform: scaleY(1.6); }
  40% { transform: scaleY(1.1); }
  75% { transform: scaleY(0.95); }
}

@keyframes wave-random-6 {
  0%, 100% { transform: scaleY(1); }
  28% { transform: scaleY(0.88); }
  52% { transform: scaleY(1.5); }
  78% { transform: scaleY(1.25); }
}

.voice-timer {
  font-size: 20px;
  font-weight: 600;
  color: #FFFFFF;
}

/* 按钮重置 - 清除微信小程序button默认样式 */
button {
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  line-height: normal;
}

button::after {
  border: none;
}
