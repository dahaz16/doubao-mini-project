/* ==================== 全局容器 ==================== */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
  /* 渐变背景 */
  background: linear-gradient(135deg, #FFF5F7 0%, #F3F4F6 50%, #ECF6FF 100%);
}

/* ==================== Top 区：AI 虚拟形象 ==================== */
.top-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100px; /* 预留导航栏空间 */
}

.ai-avatar {
  width: 360px;
  height: 180px;
}

/* ==================== Middle 区：AI 字幕气泡 ==================== */
.middle-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 20px 20px 20px;
  overflow-y: auto;
}

.ai-subtitle-bubble {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
}

/* 思考中状态：彩虹渐变边框动画 */
.ai-subtitle-bubble.thinking-bubble {
  position: relative;
  background: white;
  border: none;
  box-shadow: none;
}

.ai-subtitle-bubble.thinking-bubble::before {
  content: '';
  position: absolute;
  top: -3px;
  left: -3px;
  right: -3px;
  bottom: -3px;
  border-radius: 33px;
  background: linear-gradient(90deg, #FF6B6B, #FFE66D, #4ECDC4, #45B7D1, #96E6A1, #FF6B6B);
  background-size: 300% 100%;
  animation: rainbow-border 3s linear infinite;
  z-index: -1;
}

@keyframes rainbow-border {
  0% { background-position: 0% 50%; }
  100% { background-position: 300% 50%; }
}

.ai-subtitle-text {
  font-size: 22px; /* PRD规定 */
  font-weight: 600; /* PRD规定: 加粗 */
  color: #373737; /* PRD规定 */
  line-height: 1.6;
}

.ai-subtitle-text.thinking {
  color: #A6A6A6; /* PRD规定: 思考中文字颜色 */
  font-weight: 400;
}

/* ==================== Bottom 区：用户输入区 ==================== */
.bottom-section {
  display: flex;
  flex-direction: column;
  padding: 0 20px 20px;
  padding-bottom: calc(20px + env(safe-area-inset-bottom));
}

/* 用户字幕气泡 */
.user-subtitle-bubble {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  margin-bottom: 20px;
}

.user-subtitle-text {
  font-size: 22px;
  color: #373737;
  line-height: 1.6;
}

/* ==================== 控制按钮组 ==================== */
.control-buttons {
  display: flex;
  align-items: center;
  gap: 15px;
  width: 100%;
}

/* 讲述按钮（长条形）*/
.narration-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  height: 50px; /* PRD规定 */
  border-radius: 25px; /* PRD规定 */
  background: #FFFFFF;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  font-size: 20px; /* PRD规定 */
  font-weight: 600;
  color: #373737;
  border: none;
  padding: 0 20px !important;
  margin: 0;
  box-sizing: border-box;
}

.narration-btn .mic-icon {
  width: 20px;
  height: 20px;
}

.narration-btn.disabled {
  opacity: 0.5;
  color: #A6A6A6;
}

/* 圆形按钮 */
.circle-btn {
  width: 50px; /* PRD规定 */
  height: 50px;
  min-width: 50px;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  padding: 0 !important;
  margin: 0;
  border: none;
  flex-shrink: 0;
}

.circle-btn image {
  width: 28px;
  height: 28px;
}

.circle-btn.disabled {
  opacity: 0.5;
}

/* 取消按钮（红色背景）*/
.circle-btn.cancel-btn {
  background: #FFFFFF;
}

.cancel-icon {
  font-size: 24px;
  font-weight: 300;
  color: #FF6B6B;
}

/* 发送按钮（白色背景，绿色箭头）*/
.circle-btn.send-btn {
  background: #FFFFFF;
}

.send-icon {
  font-size: 22px;
  font-weight: 600;
  color: #4ECDC4;
}

/* ==================== 音频指示器 ==================== */
.voice-indicator {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  height: 50px;
  border-radius: 25px;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
  padding: 0 20px;
}

.voice-waveform {
  display: flex;
  align-items: center;
  gap: 3px;
}

.wave-bar {
  width: 4px;
  border-radius: 2px;
  background: #373737;
  animation: wave-jump 0.6s ease-in-out infinite;
}

.wave-bar:nth-child(1) { height: 8px; animation-delay: 0s; }
.wave-bar:nth-child(2) { height: 16px; animation-delay: 0.1s; }
.wave-bar:nth-child(3) { height: 24px; animation-delay: 0.15s; }
.wave-bar:nth-child(4) { height: 20px; animation-delay: 0.2s; }
.wave-bar:nth-child(5) { height: 24px; animation-delay: 0.25s; }
.wave-bar:nth-child(6) { height: 16px; animation-delay: 0.3s; }
.wave-bar:nth-child(7) { height: 8px; animation-delay: 0.35s; }

@keyframes wave-jump {
  0%, 100% { transform: scaleY(1); }
  50% { transform: scaleY(1.8); }
}

.voice-timer {
  font-size: 20px;
  font-weight: 600;
  color: #373737;
}

/* 按钮重置 */
button::after {
  border: none;
}
