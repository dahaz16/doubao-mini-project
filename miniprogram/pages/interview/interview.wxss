/* ==================== 全局容器 ==================== */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
  /* 渐变背景 */
  background: linear-gradient(135deg, #FFF5F7, #F3F4F6, #ECF6FF);
  background-size: 200% 200%;
  animation: gradient-flow 8s ease infinite;
}

@keyframes gradient-flow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* ==================== Top 区：AI 虚拟形象 ==================== */
.top-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.ai-avatar {
  width: 260rpx; /* 130px × 2 */
  height: 340rpx; /* 170px × 2 */
  margin-bottom: 40rpx;
}

/* ==================== Middle 区：AI 字幕气泡 ==================== */
.middle-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx; /* 左右边距 20px */
  overflow-y: auto;
}

.ai-subtitle-bubble {
  background: rgba(255, 255, 255, 0.9); /* 白色 90% 透明度 */
  border-radius: 60rpx; /* 30px × 2 */
  padding: 40rpx; /* 20px × 2 */
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  margin-bottom: 40rpx;
}

.ai-subtitle-text {
  font-size: 44rpx; /* 22px × 2 */
  font-weight: 600; /* 加粗 */
  color: #373737;
  line-height: 1.6;
}

.ai-subtitle-text.thinking {
  color: #A6A6A6; /* 思考中文字颜色 */
}

/* ==================== Bottom 区：用户输入区 ==================== */
.bottom-section {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx 40rpx; /* 左右边距 20px，底部 40rpx */
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom)); /* 适配安全区 */
}

/* 用户字幕气泡 */
.user-subtitle-bubble {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 60rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  margin-bottom: 40rpx;
  align-self: flex-end;
  max-width: 80%;
}

.user-subtitle-text {
  font-size: 44rpx; /* 22px × 2，常规不加粗 */
  color: #373737;
  line-height: 1.6;
}

/* 音频指示器（声波 + 倒计时）*/
.voice-indicator {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx; /* 25px × 2 */
  height: 100rpx; /* 50px × 2 */
  padding: 0 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  margin-bottom: 40rpx;
}

.voice-waveform {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.wave-bar {
  width: 8rpx; /* 4px × 2 */
  border-radius: 4rpx; /* 2px × 2 */
  background: #373737;
  animation: wave-jump 0.8s ease-in-out infinite;
}

.wave-bar:nth-child(1) { height: 20rpx; animation-delay: 0s; }
.wave-bar:nth-child(2) { height: 40rpx; animation-delay: 0.1s; }
.wave-bar:nth-child(3) { height: 60rpx; animation-delay: 0.2s; }
.wave-bar:nth-child(4) { height: 40rpx; animation-delay: 0.3s; }
.wave-bar:nth-child(5) { height: 20rpx; animation-delay: 0.4s; }

@keyframes wave-jump {
  0%, 100% { transform: scaleY(1); }
  50% { transform: scaleY(1.5); }
}

.voice-timer {
  font-size: 40rpx; /* 20px × 2 */
  font-weight: 600;
  color: #373737;
}

/* 输入框 */
.input-field {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  min-height: 100rpx; /* 50px × 2 */
  max-height: 250rpx; /* 5 行限制 */
  padding: 25rpx 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  font-size: 44rpx;
  color: #373737;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 控制按钮组 */
.control-buttons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

/* 长条形按钮（讲述按钮）*/
.narration-btn,
.narration-btn-disabled {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx; /* 50px × 2 */
  border-radius: 50rpx;
  background: #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  font-size: 40rpx; /* 20px × 2 */
  font-weight: 600;
  color: #373737;
  border: none;
  padding: 0 !important;
  margin: 0;
  box-sizing: border-box;
  width: 100% !important;
  min-width: 100%;
}

.narration-btn-disabled {
  color: #A6A6A6;
  opacity: 0.6;
}

/* 圆形按钮（切换键盘/语音、取消、发送）*/
.circle-btn {
  width: 100rpx; /* 50px × 2 */
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  padding: 0;
  margin: 0;
  border: none;
}

.circle-btn image {
  width: 50rpx; /* 图标大小 */
  height: 50rpx;
}

.circle-btn.disabled {
  opacity: 0.4;
}

/* 按钮重置 */
button::after {
  border: none;
}
