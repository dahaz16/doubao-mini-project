/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景图片层 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 标题区域 */
.title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 259px; /* 固定 259px */
  left: 0;
  right: 0;
}

.main-title {
  font-size: 46px; /* 固定 46px */
  font-weight: 600;
  color: #373737;
  margin-bottom: 0;
}

.version-number {
  font-size: 20px; /* 固定 20px */
  color: #373737; /* 改为深灰色 */
  margin-top: 10px; /* 固定 10px 物理间距 */
}

/* 按钮区域 */
.button-section {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 20px; /* 固定 20px 物理边距 */
  padding-bottom: calc(40px + env(safe-area-inset-bottom)); /* 固定 40px */
  gap: 20px; /* 固定 20px 间距 */
}

.primary-btn,
.secondary-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px; /* 固定 8px */
  width: 100%;
  height: 50px; /* 固定 50px 高度 */
  border-radius: 25px; /* 固定 25px 圆角 */
  background: #FFFFFF;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25); /* 固定 4px 8px */
  font-size: 20px; /* 固定 20px */
  font-weight: 600;
  color: #373737;
  border: none;
}

.primary-btn::after,
.secondary-btn::after {
  border: none;
}

.btn-icon {
  width: 19px; /* 38rpx ÷ 2 = 19px */
  height: 19px;
}

/* 弹窗遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 弹窗容器 */
.modal-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 300px; /* 固定 300px */
  background: #FFFFFF;
  border-radius: 30px; /* 固定 30px */
  padding: 30px 20px 20px; /* 固定 px */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25); /* 固定 4px 8px */
}

.modal-avatar {
  width: 130px; /* 固定 130px */
  height: 170px; /* 固定 170px */
  margin-bottom: 20px; /* 固定 20px */
}

.modal-text {
  font-size: 16px; /* 固定 16px */
  color: #373737;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 20px; /* 固定 20px */
}

.modal-btn {
  width: 100%;
  height: 50px; /* 固定 50px */
  border-radius: 25px; /* 固定 25px */
  background: #FFFFFF;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25); /* 固定 4px 8px */
  font-size: 20px; /* 固定 20px */
  font-weight: 600;
  color: #373737;
  border: none;
}

.modal-btn::after {
  border: none;
}
