/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  background-image: url('/images/homepage_background.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* 标题区域 */
.title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 518rpx; /* 259px * 2 */
  left: 0;
  right: 0;
}

.main-title {
  font-size: 112rpx; /* 56px * 2 */
  font-weight: 600;
  color: #373737;
  margin-bottom: 0;
}

.version-number {
  font-size: 40rpx; /* 20px * 2 */
  color: #A6A6A6;
  margin-top: 176rpx; /* (347-259) * 2 = 88px * 2 */
}

/* 按钮区域 */
.button-section {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  left: 40rpx; /* 20px * 2 */
  right: 40rpx; /* 20px * 2 */
  padding-bottom: calc(80rpx + env(safe-area-inset-bottom));
  gap: 40rpx; /* 20px * 2 */
}

.primary-btn,
.secondary-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  background: #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  font-size: 40rpx; /* 20px * 2 */
  font-weight: 600;
  color: #373737;
  border: none;
}

.primary-btn::after,
.secondary-btn::after {
  border: none;
}

.btn-icon {
  width: 38rpx;
  height: 38rpx;
}

/* 弹窗遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 弹窗容器 */
.modal-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 60rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
}

.modal-avatar {
  width: 260rpx;
  height: 340rpx;
  margin-bottom: 40rpx;
}

.modal-text {
  font-size: 32rpx;
  color: #373737;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.modal-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  background: #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.25);
  font-size: 40rpx;
  font-weight: 600;
  color: #373737;
  border: none;
}

.modal-btn::after {
  border: none;
}
