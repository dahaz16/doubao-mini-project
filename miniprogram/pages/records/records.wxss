.container {
  padding: 10px;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.record-item {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.record-header {
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
  padding-bottom: 5px;
}

.time {
  font-size: 12px;
  color: #999;
}

.section {
  margin-bottom: 8px;
}

.label {
  font-weight: bold;
  font-size: 14px;
  color: #333;
  display: block;
  margin-bottom: 4px;
}

.content {
  font-size: 14px;
  color: #666;
  line-height: 1.5;
  display: block;
  word-break: break-all; /* 强制长文本换行 */
  white-space: pre-wrap; /* 保留换行符 */
}

.ai-content {
  color: #333;
}

.divider {
  height: 1px;
  background: #eee;
  margin: 10px 0;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 50px;
  font-size: 14px;
}
